doctype html
html(lang="en")
    head
        include partials/header
    body.login 
        .contenedor-formulario 
            h1 Login in 
            
            if locals.mensajes
                .alertas
                    each categoria in Object.keys(locals.mensajes)
                        each error in mensajes[categoria]
                            .alerta(class=`${categoria}`)
                                p= `${error == ''? '': error}`
               
               
            form#formulario.caja.caja-login(method="POST" action="/iniciar-sesion")
                .campo
                    label(for="email") E-mail:
                    input(type="text" name="email" placeholder="" value= email )
                .campo
                    label(for="password") Password:
                    input(type="password" name="password" placeholder=" " value= password )
                .campo.enviar
                    input.boton(type="submit" value="Login in")
                .campo.acciones
                    a(href="/crear-cuenta") 
                    a(href="/reestablecer")         
